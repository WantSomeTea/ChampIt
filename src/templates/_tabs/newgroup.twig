<form class="form">

  {% include '../_components/alert.twig' with {id: "form-error", type: "error", message: "Message!"} %}
  {% include '../_components/alert.twig' with {id: "form-info", type: "info", message: "Message!"} %}
  <fieldset>
    <legend>Новая группа</legend>
    <div class="row">
      <div class="col col-6">
        <div class="form-item">
            <label>Число команд</label>
            <input type="number" id="form-team-number" min="1" max="100" step="1" value="8">
        </div>
      </div>
      <div class="col col-6">
          <div class="form-item">
            <div class="form-item">
              <label>Команд в группе</label>
              <input id="form-teams-in-group" type="number" min="1" max="30" step="1" value="4">
            </div>
          </div>
      </div>
  </div>
    <span id="form-teams">
    <div class="row blocks">
      {% for i in 1..8 %}
        <div class="form-item col col-6">
          <label>Команда № {{ i }}</label>
          <input type="text" placeholder="Команда № {{ i }}">
        </div>
      {% endfor %}
    </div>
    </span>
  <div class="form-item">
    <button type="button" class="button primary" id="group-stage">Создать группы</button>
  </div>
  </fieldset>
</form>
